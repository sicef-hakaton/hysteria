<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hysteria"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MakeRequestActivity"
            android:label="@string/title_activity_make_request" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
        </activity>

        <service android:name="com.example.services.CommunicationService" />

        <activity
            android:name=".ShowAllRequestsActivity"
            android:label="@string/title_activity_show_all_requests" >
        </activity>
        <activity
            android:name=".ShowAllSchoolarshipsActivity"
            android:label="@string/title_activity_show_all_schoolarships" >
        </activity>
        <activity
            android:name=".ShowAllInternshipsActivity"
            android:label="@string/title_activity_show_all_internships" >
        </activity>
    </application>

</manifest>
