<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
        	<solid 
		        android:color="@color/hysteria_lightblue"/>
		     <corners
		         android:radius="5dp" />
		     <stroke 
		         android:width="3dp"
		         android:color="@color/hysteria_blue"/>
		     <padding
		         android:left="5dp"
		         android:top="5dp"
		         android:right="5dp"
		         android:bottom="5dp" />    
        </shape>
    </item>
    
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
        	<solid 
		        android:color="@color/hysteria_lightblue"/>
		     <corners
		         android:radius="5dp" />
        	<stroke 
        	     android:width="3dp"
		         android:color="@color/hysteria_grey"/>
		     <padding
		         android:left="5dp"
		         android:top="5dp"
		         android:right="5dp"
		         android:bottom="5dp" />    
        </shape>
    </item>

</selector>
