<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
        	<solid 
		        android:color="@color/hysteria_lightblue"/>
		     <corners
		         android:radius="5dp" />
		     <padding
		         android:left="10dp"
		         android:top="10dp"
		         android:right="10dp"
		         android:bottom="10dp" />    
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
        	<solid 
		        android:color="@color/hysteria_disabled"/>
		     <corners
		         android:radius="5dp" />
		     <padding
		         android:left="10dp"
		         android:top="10dp"
		         android:right="10dp"
		         android:bottom="10dp" />    
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
        	<solid 
		        android:color="@color/hysteria_blue"/>
		     <corners
		         android:radius="5dp" />
		     <padding
		         android:left="10dp"
		         android:top="10dp"
		         android:right="10dp"
		         android:bottom="10dp" />    
        </shape>
    </item>
    
</selector>
